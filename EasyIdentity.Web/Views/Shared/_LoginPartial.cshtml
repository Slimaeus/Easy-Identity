@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark"
               title="Manage">Hello @User.Identity!.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Users" asp-action="Logout"
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                  method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Register"
               asp-route-returnUrl="@Url.Page("/", new { area = "" })">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Login"
               asp-route-returnUrl="@Url.Page("/", new { area = "" })">Login</a>
        </li>
    }
</ul>